{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "es2016" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types/"
        ],
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "spec",
        "**/*.spec.ts",
        "**/*.d.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}